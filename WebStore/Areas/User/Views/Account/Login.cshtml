@model WebStore.Areas.User.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Sign in";
}
<h2 class="text-center">Sign in proccess</h2>
<div asp-validation-summary="All"></div>
<form asp-controller="Account" asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Email">Email address</label>
        <input asp-for="Email" type="email" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control">
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" asp-for="RememberMe">
        <label class="form-check-label" asp-for="RememberMe">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
</form>
